@model RPSWebApp.Models.GameOver
@using RPSWebApp.Models;

@{
    ViewBag.Title = "Game Over";
}

<div class="col-sm-offset-8 col-sm-4 row" id="turns">
    <h3>
        Losing Turns: @Model.Turns
    </h3>
</div>

<div class="row" id="GameResult">
    <div class="col-sm-12">
        @switch (Model.User.Result)
        {
            case GameResult.win:
                <h1>WINNER!</h1>
                switch (Model.User.Choice)
                {
                    case Choice.paper:
                        <img src="~/Images/paper.jpg" alt="paper win" class="img-responsive" />
                        break;
                    case Choice.rock:
                        <img src="~/Images/rock.jpg" alt="rock win" class="img-responsive" />
                        break;
                    case Choice.scissors:
                        <img src="~/Images/scissors.jpg" alt="scissors win" class="img-responsive" />
                        break;
                }
                break;
            case GameResult.loss:
                <h1>LOSSER!</h1>
                switch (Model.Computer.Choice)
                {
                    case Choice.paper:
                        <img src="" alt="paper loss" />
                        break;
                    case Choice.rock:
                        <img src="" alt="rock loss" />
                        break;
                    case Choice.scissors:
                        <img src="" alt="scissors loss" />
                        break;
                }
                break;
            case GameResult.tie:
                <h1>TIE :(</h1>
                <img src="" alt="tie" />
                break;
        }
    </div>
</div>


@using (Html.BeginForm("PlayAgain", "Home", FormMethod.Get))
{
    <div class="col-sm-12">
        <button type="submit" name="play again" class="btn btn-block btn-primary">Play Again</button>
    </div>
}


